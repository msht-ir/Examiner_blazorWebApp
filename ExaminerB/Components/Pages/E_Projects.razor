                @if (appState.Cmd == "AddNewProject")
                    {
                    <hr style="color:red"/>
                    <h6>New Project</h6>
                    <div class="mb-3">
                        <MudTextField @ref="refNewProject" @bind-Value="project.ProjectName" Label="Project Name... نام پروژه" Variant="Variant.Outlined" Autocomplete="off" Dense="true" Margin="Margin.Dense" Class="my-textfield" />
                    </div>
                    <button class="btn btn-link" name="btnNewCourse" @onclick="BtnSaveNewProject">
                        <img src="/img/icoSave2.png" width="22" />
                    </button>
                    <button class="btn btn-link" name="btnNewCourse" @onclick="BtnCancel">
                        <img src="/img/icoCancel.png" width="24" />
                    </button>
