@page "/simple-exam-sheet"

<div class="simple-sheet">
    <hr />
    <div class="sheet-columns">
        @for (int col = 0; col < 3; col++)
            {
            <div class="sheet-column">
                @for (int i = 1; i <= 20; i++)
                    {
                    var qstn = col * 20 + i;

                    <div class="question-line">
                        <span class="q-number">@qstn.</span>
                        <div class="choice-box"></div>
                        <div class="choice-box"></div>
                        <div class="choice-box"></div>
                        <div class="choice-box"></div>
                    </div>
                    }
            </div>
            }
    </div>
    <hr />
</div>

<style>
    .simple-sheet {font-family: Arial, sans-serif; padding: 10px;}
    .sheet-columns {display: flex; gap: 25px;}
    .sheet-column {flex: 1;}
    .question-line {display: flex; align-items: center; gap: 8px; margin-bottom: 5px;}
    .q-number {width: 25px; text-align: right;font-size: 12px;}
    .choice-box {width: 18px; height: 18px; border: 1px solid #333; margin: 0 2px;}
</style>
